<ul class="list-none pl-4">
  <% todos.forEach(function(todo) { %>
    <li class="Todo-Item">
      <div class="flex items-center w-fit my-2 px-2 py-1 rounded hover:bg-purple-50 group">

        <!-- Checkbox for complete -->
        <form action="/todos/<%= todo.id %>/complete?_method=PUT" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <input id="todo-<%= todo.id %>" type="checkbox"
                 class="w-4 h-4 text-blue-600 bg-gray-100 rounded border-gray-300"
                 <%= todo.completed ? "checked" : "" %>
                 onchange="this.form.submit()">
        </form>

        <!-- Title -->
        <label for="todo-<%= todo.id %>" class="ml-2 text-sm cursor-pointer <%= todo.completed ? 'line-through text-gray-400' : 'text-gray-600' %>">
          <%= todo.title %>
        </label>

        <!-- Delete button -->
        <form action="/todos/<%= todo.id %>?_method=DELETE" method="POST" class="ml-2 hidden group-hover:inline">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <button type="submit" class="text-red-500 cursor-pointer">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"
                 stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round"
                    d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 
                      4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
          </button>
        </form>

      </div>
    </li>
  <% }) %>
</ul>
